<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ImageView
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:layout_marginStart="13dp"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="모두의 약속에서 추천하는 시간대에요"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/back_button"
        app:layout_constraintHorizontal_bias="0.5" />

    <include
        android:id="@+id/schedule_option_1"
        layout="@layout/item_schedule_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <include
        android:id="@+id/schedule_option_2"
        layout="@layout/item_schedule_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/schedule_option_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <include
        android:id="@+id/schedule_option_3"
        layout="@layout/item_schedule_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/schedule_option_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/text_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="모두의 약속은"
        android:paddingTop="16dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/schedule_option_3"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/text_condition_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1. 모두가 가능한 시간대일때"
        android:paddingTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/text_description"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/text_condition_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2. 활동이 활발한 시간대일때"
        android:paddingTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/text_condition_1"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/text_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="높은 점수를 부여해요"
        android:paddingTop="4dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/text_condition_2"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="text_score"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:backgroundTint="#E2E2E2"
            android:textColor="@color/white"
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginEnd="70dp"
            android:layout_weight="1"
            android:text="포기하기"
            android:background="@drawable/button_cancel" />

        <Button
            android:backgroundTint="#E2E2E2"
            android:textColor="@color/white"
            android:id="@+id/btn_select"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="선택하기"
            android:background="@drawable/button_background" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
